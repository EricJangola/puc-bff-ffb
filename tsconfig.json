{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "module": "es2020",
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "removeComments": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types",
    ]
  },
  "include": [
    "./src",
    "./test",
    "./database"
  ],
  "exclude": [
    "./node_modules",
    "./mysql",
    "./dist",
  ]
}
